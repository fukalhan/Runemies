<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enemy"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:gravity="start"
    android:background="@drawable/record_background"
    android:elevation="5dp">

    <TextView
        android:id="@+id/rank"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:textSize="26sp"
        tools:text="123."/>

    <ImageView
        android:id="@+id/enemy_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_account_circle_black_24dp"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center|start">
        <TextView
            android:id="@+id/enemy_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Username"/>

        <TextView
            android:id="@+id/enemy_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enemy_username"
            android:textSize="18sp"
            tools:text="10"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enemy_username"
            android:layout_toEndOf="@+id/enemy_points"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_star"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</LinearLayout>