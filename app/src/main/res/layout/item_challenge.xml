<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:background="@drawable/record_background"
    android:elevation="10dp">
    <ImageView
        android:id="@+id/challenge_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/challenge_profile_pic"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/challengerUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Username"/>
        <TextView
            android:id="@+id/challengeType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="challenge type"/>
        <TextView
            android:id="@+id/challengeDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="from - to"/>
    </LinearLayout>
</RelativeLayout>