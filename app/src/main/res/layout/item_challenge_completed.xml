<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/record_background"
    android:elevation="5dp">

    <TextView
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:gravity="center"
        android:text="@string/challenge_date"
        android:textSize="20sp"
        android:textColor="@color/white"
        tools:text="Challenge 16.2.2019"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_result"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/challenge_distance"
                tools:text="15 km" />

            <TextView
                android:id="@+id/user_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:text="WINNER" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/enemy_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enemy_username"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:text="Username result"/>
            <TextView
                android:id="@+id/enemy_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/challenge_distance"
                tools:text="10 km"/>
            <TextView
                android:id="@+id/enemy_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:text="LOOSER"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>