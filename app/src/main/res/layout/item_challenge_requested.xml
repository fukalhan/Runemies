<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="7dp"
    android:background="@drawable/record_background"
    android:elevation="5dp">

    <TextView
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:gravity="center"
        android:text="@string/challenge_date"
        android:textSize="20sp"
        android:textColor="@color/white"
        tools:text="Challenge 16.2.2019"/>

    <TextView
        android:id="@+id/challenged_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_date"
        android:layout_marginTop="23dp"
        android:layout_marginStart="15dp"
        android:text="@string/challenged_by"/>

    <TextView
        android:id="@+id/enemy_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_date"
        android:layout_toEndOf="@+id/challenged_by"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Username" />

    <TextView
        android:id="@+id/to_beat_his"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenged_by"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:text="@string/to_beat_his"/>

    <TextView
        android:id="@+id/challenge_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenged_by"
        android:layout_marginStart="26dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/to_beat_his"
        android:text="@string/challenge_distance"
        android:textStyle="bold"
        android:textSize="15sp"
        tools:text="15 km" />

    <Button
        android:id="@+id/start_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        app:backgroundTint="@color/green"
        android:background="@drawable/button_start_background"
        android:text="@string/start_challenge"/>

</RelativeLayout>