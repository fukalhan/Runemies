<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:animateLayoutChanges="true"
    android:elevation="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/image_layout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="40dp"
        card_view:cardPreventCornerOverlap="false">
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_grey"
            tools:ignore="ContentDescription"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_big_profile_round"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/image_layout"
        android:text="@string/challenge_date"
        android:textSize="20sp"
        tools:text="Challenge 16.2.2019"/>
    <TextView
        android:id="@+id/challenger_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/image_layout"
        android:layout_below="@+id/start_date"
        android:layout_gravity="center_vertical"
        android:text="@string/challenged_by"
        android:textSize="20sp"
        tools:text="By username"/>
    <LinearLayout
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenger_username"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/guess"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:text="@string/guess"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/challenge_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_arrow"
            app:backgroundTint="@color/green"
            app:tint="@color/white"/>
    </LinearLayout>
</RelativeLayout>