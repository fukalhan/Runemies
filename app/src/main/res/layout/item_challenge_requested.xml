<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:animateLayoutChanges="true"
    android:elevation="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/image_layout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="40dp"
        card_view:cardPreventCornerOverlap="false">
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_grey"
            android:src="@mipmap/ic_big_profile_foreground"
            tools:ignore="ContentDescription"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/image_layout"
        android:text="@string/challenge_date"
        android:textSize="20sp"
        tools:text="Challenge 16.2.2019"/>
    <TextView
        android:id="@+id/challenger_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/image_layout"
        android:layout_below="@+id/start_date"
        android:layout_gravity="center_vertical"
        android:text="@string/challenged_by"
        android:textSize="20sp"
        tools:text="By username"/>

    <TextView
        android:id="@+id/challenge_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenger_username"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/requested_challenge_question"
        tools:text="Try to guess username result and beat it?"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenge_question"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/accept_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:backgroundTint="@color/green"
            android:background="@drawable/fab_background"
            android:text="@string/accept"/>

        <Button
            android:id="@+id/decline_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:backgroundTint="@color/red"
            android:background="@drawable/fab_background"
            android:text="@string/decline"/>
    </LinearLayout>
</RelativeLayout>