<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="7dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/record_background"
    android:elevation="5dp">

    <TextView
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:gravity="center"
        android:text="@string/challenge_date"
        android:textSize="20sp"
        android:textColor="@color/white"
        tools:text="Challenge 16.2.2019"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/your_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_result"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/your_result"
            android:layout_marginTop="13dp"
            android:text="@string/challenge_distance"
            tools:text="15 km" />

        <TextView
            android:id="@+id/enemy_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/your_result"
            android:layout_margin="10dp"
            android:text="@string/enemy_username"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:text="Username result:"/>
        <TextView
            android:id="@+id/enemy_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/your_result"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/enemy_username"
            android:text="@string/waiting_for"/>

        <Button
            android:id="@+id/quit_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_end_background"
            app:backgroundTint="@color/red"
            android:text="@string/quit"/>
    </RelativeLayout>
</LinearLayout>